@page "/counter/"
@page "/counter/{Count:int}"

@inherits ComponentBase<ViewModels.CounterViewModel>

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @ViewModel.Count</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<button class="btn btn-primary" @onclick="@(() => Navigation.NavigateTo($"/counter/{DateTime.Now.Second}"))">Click To Win</button>
